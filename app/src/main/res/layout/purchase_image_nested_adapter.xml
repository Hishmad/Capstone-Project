<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/transaction_adapter_display_item_image_viewCard"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/size_half"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground"
    app:cardElevation="@dimen/card_elevation">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="240dp"
        android:layout_height="192dp"
        android:orientation="vertical"
        android:padding="@dimen/size_half">

        <ImageView
            android:id="@+id/transaction_adapter_display_item_image"
            android:layout_width="match_parent"
            android:layout_height="172dp"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/transaction_adapter_display_item_image_quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="8sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:hint="Quantity"/>

    </LinearLayout>
</android.support.v7.widget.CardView>