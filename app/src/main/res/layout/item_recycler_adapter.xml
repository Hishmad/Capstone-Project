<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/size_half"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="@dimen/card_elevation">

    <LinearLayout
        android:id="@+id/mainHolderItem"
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_height_vertical"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/itemPoster"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_poster_height"
            android:scaleType="centerCrop"
            android:contentDescription="@string/product_image_content_description"/>

        <TextView
            android:id="@+id/itemName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/size_full"
            android:paddingLeft="@dimen/size_full"
            android:paddingRight="@dimen/size_full"
            android:paddingStart="@dimen/size_full"
            android:paddingTop="@dimen/size_half"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/black" />


        <TextView
            android:id="@+id/itemNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/size_full"
            android:paddingLeft="@dimen/size_full"
            android:paddingRight="@dimen/size_full"
            android:paddingStart="@dimen/size_full"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/itemPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/size_full"
            android:paddingLeft="@dimen/size_full"
            android:paddingRight="@dimen/size_full"
            android:paddingStart="@dimen/size_full"
            android:textColor="@android:color/holo_red_light" />

        <TextView
            android:id="@+id/itemCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size_half"
            android:gravity="bottom"
            android:paddingEnd="@dimen/size_full"
            android:paddingLeft="@dimen/size_full"
            android:paddingRight="@dimen/size_full"
            android:paddingStart="@dimen/size_full"
            android:textColor="@android:color/secondary_text_light"
            android:textSize="@dimen/item_category_text_size"
            />

    </LinearLayout>

</android.support.v7.widget.CardView>